<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/textAlreadyAcc"
        android:layout_width="158dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/dont_have_an_account"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn"
        app:layout_constraintVertical_bias="0.858" />

    <EditText
        android:id="@+id/edtextPassword"
        android:layout_width="351dp"
        android:layout_height="51dp"
        android:drawableLeft="@drawable/password"
        android:hint="**********"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassword"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/email"
        android:textSize="16sp"
        android:textColor="@color/bulecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWecome"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtextGmail"
        android:layout_width="351dp"
        android:layout_height="41dp"
        android:drawableLeft="@drawable/username"
        android:hint="abc@gmail.com"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="244dp"
        android:text="@string/password"
        android:textColor="@color/bulecolor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtextGmail"
        app:layout_constraintVertical_bias="0.146" />

    <TextView
        android:id="@+id/textforSignIn"
        android:layout_width="164dp"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textColor="#A3000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <EditText
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:background="@null"
        android:gravity="center"
        android:text="@string/car_wash_company"
        android:textColor="@color/bulecolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/textWecome"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/edslogan"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:background="@null"
        android:gravity="center"
        android:text="@string/slogan"
        android:textColor="@color/bulecolor"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/textWecome"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textWecome"
        android:layout_width="86dp"
        android:layout_height="23dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:gravity="start"
        android:text="@string/welcome_to"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/btmSignUp"
        android:layout_width="251dp"
        android:layout_height="43dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/rounded_buttom"
        android:ellipsize="none"
        android:text="@string/sign_in"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtextPassword"
        app:layout_constraintVertical_bias="0.927" />

    <TextView
        android:id="@+id/textSignIn"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:text="@string/sign_up"
        android:textColor="@color/bulecolor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toEndOf="@+id/textAlreadyAcc"
        app:layout_constraintTop_toBottomOf="@+id/btmSignUp"
        app:layout_constraintVertical_bias="0.108" />


</androidx.constraintlayout.widget.ConstraintLayout>