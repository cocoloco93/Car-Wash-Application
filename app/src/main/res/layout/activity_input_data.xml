        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />
    <Spinner
        android:id="@+id/spinnerCarType2"
        android:layout_width="342dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/droup_down"
        app:layout_constraintBottom_toTopOf="@+id/textforSignIn26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn25" />
    <TextView
        android:id="@+id/textforSignIn26"
        android:layout_width="189dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_horizontal"
        android:text="@string/service_type"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCarType2"
        tools:ignore="RtlCompat" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="342dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="40dp">
        <!--1colom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <!--1 roll-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbox"
                    android:layout_width="335dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gradient"
                    android:button="?android:attr/listChoiceIndicatorSingle"
                    android:buttonTint="@color/secondary"
                    android:checked="true"
                    android:text="Interiror Cleaing"
                    android:textColor="@color/secondary"
                    android:textSize="18sp">

                </CheckBox>


            </LinearLayout>


            <!--1 roll-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbox2"
                    android:layout_width="335dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gradient"
                    android:button="?android:attr/listChoiceIndicatorSingle"
                    android:buttonTint="@color/secondary"
                    android:checked="true"
                    android:text="Interiror Cleaing"
                    android:textColor="@color/secondary"
                    android:textSize="18sp">

                </CheckBox>


            </LinearLayout>
            <!--1 roll-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbox3"
                    android:layout_width="335dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gradient"
                    android:button="?android:attr/listChoiceIndicatorSingle"
                    android:buttonTint="@color/secondary"
                    android:checked="true"
                    android:text="Interiror Cleaing"
                    android:textColor="@color/secondary"
                    android:textSize="18sp">

                </CheckBox>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
