            android:layout_marginBottom="2dp"
            android:background="@drawable/plus"
            android:textSize="30sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btmCreate2"
        android:layout_width="251dp"
        android:layout_height="43dp"
        android:layout_marginLeft="75dp"
