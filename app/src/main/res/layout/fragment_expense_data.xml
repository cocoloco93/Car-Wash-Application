<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseData">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn30"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">
        <!--1colom-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--roll-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/lines_frame"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textforSignIn29"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_buttom"
                    android:fontFamily="@font/pyidaungsu_"
                    android:paddingLeft="10dp"
                    android:text="@string/text_with_paragraphs"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary" />

                <!--1 roll-->




                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_icon"/>



                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/delete_icon"
                    android:visibility="visible" />




            </RelativeLayout>
            <!--roll-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/lines_frame"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:background="@drawable/dotlines"
                    android:layout_marginTop="30dp"
                   android:layout_marginLeft="20dp"
                    android:hint="@string/enter_item_type" />


                <!--1 roll-->


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/price"/>


                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"

                    android:background="@drawable/edit_icon"/>



                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/delete_icon"
                    android:visibility="visible" />




            </RelativeLayout>
            <!--roll-->





        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btmCreate3"
        android:layout_width="251dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:ellipsize="none"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/segoeui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/textforSignIn30"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="@string/creat_item"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/pyidaungsu_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textforSignIn4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="@string/price"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/pyidaungsu_"
        app:layout_constraintStart_toEndOf="@+id/textforSignIn30"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>