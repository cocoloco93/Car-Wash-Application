<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseData">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="342dp"
        android:layout_height="420dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforSignIn30"
        tools:ignore="MissingConstraints">
        <!--1colom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <!--1 roll start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btm1"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:paddingLeft="6dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rectangle_buttom"
                    android:text="@string/electric"
                    android:textSize="15sp"
                    app:fontFamily="@font/pyidaungsu_"/>

                <Button
                    android:id="@+id/btm2"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:paddingRight="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rectangle_buttom"
                    android:text="1000MMK"
                    android:textSize="15sp"
                    app:fontFamily="@font/pyidaungsu_"/>





            </LinearLayout>

            <!--1 roll end-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="83dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="165dp"
                    android:text="@string/edit"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/pyidaungsu_"
                    android:drawableRight="@drawable/edit"
                    android:textAllCaps="false"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="@drawable/rectangle_buttom">

                </Button>

                <Button
                    android:layout_width="83dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/delete"
                    android:drawableRight="@drawable/delete"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pyidaungsu_"
                    android:background="@drawable/rectangle_red_btm">

                </Button>
            </LinearLayout>


            <!--1 roll start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">


                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:hint="@string/enter_item_type"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textSize="15sp"
                    app:fontFamily="@font/pyidaungsu_" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:textAlignment="textStart"
                    android:hint="@string/price"
                    android:paddingRight="5dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="15sp"
                    app:fontFamily="@font/pyidaungsu_" />


            </LinearLayout>

            <!--1 roll end-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/rectangle_buttom"
                    android:drawableLeft="@drawable/add"
                    android:drawablePadding="3dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/pyidaungsu_"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/add_manager"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btmCreate3"
        android:layout_width="251dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:ellipsize="none"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/segoeui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/textforSignIn30"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="@string/creat_item"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/pyidaungsu_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textforSignIn4"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="@string/price"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/pyidaungsu_"
        app:layout_constraintStart_toEndOf="@+id/textforSignIn30"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>