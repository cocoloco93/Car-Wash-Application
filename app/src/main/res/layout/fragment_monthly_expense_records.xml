<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.expenserecords.MonthlyExpenseRecordsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pie"
        tools:ignore="MissingConstraints">
        <!--1colom-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textforSignIn29"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_buttom"
                    android:fontFamily="@font/pyidaungsu_"
                    android:paddingLeft="10dp"
                    android:text="@string/text_with_paragraphs"
                    android:textColor="@color/colorPrimary" />
                <!--1 roll-->


                <Button
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:background="@drawable/x" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textforSignIn29"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_buttom"
                    android:fontFamily="@font/pyidaungsu_"
                    android:paddingLeft="10dp"
                    android:text="@string/text_with_paragraphs"
                    android:textColor="@color/colorPrimary" />
                <!--1 roll-->


                <Button
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:background="@drawable/x" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textforSignIn29"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_buttom"
                    android:fontFamily="@font/pyidaungsu_"
                    android:paddingLeft="10dp"
                    android:text="@string/text_with_paragraphs"
                    android:textColor="@color/colorPrimary" />
                <!--1 roll-->


                <Button
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:background="@drawable/x" />

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>